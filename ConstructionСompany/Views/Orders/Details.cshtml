@model ConstructionСompany.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @(Math.Round(Model.Cost, 2))
        </dd>
        <dt class = "col-sm-2">
            Start Date
        </dt>
        <dd class = "col-sm-10">
            @(Model.StartDate.ToShortDateString())
        </dd>
        <dt class = "col-sm-2">
           End Date
        </dt>
        <dd class = "col-sm-10">
            @(Model.EndDate.ToShortDateString())
        </dd>
        <dt class = "col-sm-2">
            Completion Mark
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompletionMark)
        </dd>
        <dt class = "col-sm-2">
            Payment Mark
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaymentMark)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dt class = "col-sm-2">
            Type of job
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeOfJobs.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brigade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brigade.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
